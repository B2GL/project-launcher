{
  "name": "multi-project-launcher",
  "displayName": "Multi Project Launcher",
  "description": "Organize and launch multiple project folders as groups. Open each project in separate windows with a single click.",
  "version": "1.1.0",
  "publisher": "BetterGearBetterLife",
  "repository": {
    "type": "git",
    "url": "https://github.com/B2GL/project-launcher"
  },
  "keywords": [
    "project",
    "workspace",
    "multi-root",
    "project manager",
    "folder"
  ],
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "multiProjectLauncher",
          "title": "Multi Project Launcher",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "multiProjectLauncher": [
        {
          "id": "multiProjectLauncher",
          "name": "Project Groups",
          "icon": "$(rocket)",
          "contextualTitle": "Multi Project Launcher",
          "visibility": "visible"
        }
      ]
    },
    "commands": [
      {
        "command": "projectLauncher.createGroup",
        "title": "Create New Group",
        "icon": "$(add)"
      },
      {
        "command": "projectLauncher.addProject",
        "title": "Add Project to Group",
        "icon": "$(new-folder)"
      },
      {
        "command": "projectLauncher.deleteGroup",
        "title": "Delete Group",
        "icon": "$(trash)"
      },
      {
        "command": "projectLauncher.removeProject",
        "title": "Remove Project",
        "icon": "$(close)"
      },
      {
        "command": "projectLauncher.openProject",
        "title": "Open Project in New Window",
        "icon": "$(window)"
      },
      {
        "command": "projectLauncher.openProjectInCurrentWindow",
        "title": "Open Project in Current Window",
        "icon": "$(empty-window)"
      },
      {
        "command": "projectLauncher.openGroupKeepWindows",
        "title": "Open All Projects (Keep Windows)",
        "icon": "$(window)"
      },
      {
        "command": "projectLauncher.openGroupCloseWindows",
        "title": "Open All Projects (Close Windows)",
        "icon": "$(split-horizontal)"
      },
      {
        "command": "projectLauncher.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "projectLauncher.openGroupFromPalette",
        "title": "Multi Project Launcher: Open Project Group",
        "category": "Multi Project Launcher"
      },
      {
        "command": "projectLauncher.openProjectFromPalette",
        "title": "Multi Project Launcher: Open Project",
        "category": "Multi Project Launcher"
      },
      {
        "command": "projectLauncher.toggleProjectEnabled",
        "title": "Toggle Project Enabled/Disabled",
        "icon": "$(circle-large-outline)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "projectLauncher.createGroup",
          "when": "view == multiProjectLauncher",
          "group": "navigation"
        },
        {
          "command": "projectLauncher.refresh",
          "when": "view == multiProjectLauncher",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "projectLauncher.addProject",
          "when": "view == multiProjectLauncher && viewItem == projectGroup",
          "group": "inline"
        },
        {
          "command": "projectLauncher.addProject",
          "when": "view == multiProjectLauncher && viewItem == projectGroup",
          "group": "2_modify@1"
        },
        {
          "command": "projectLauncher.openGroupKeepWindows",
          "when": "view == multiProjectLauncher && viewItem == projectGroup",
          "group": "1_open@1"
        },
        {
          "command": "projectLauncher.openGroupCloseWindows",
          "when": "view == multiProjectLauncher && viewItem == projectGroup",
          "group": "1_open@2"
        },
        {
          "command": "projectLauncher.deleteGroup",
          "when": "view == multiProjectLauncher && viewItem == projectGroup",
          "group": "2_modify@2"
        },
        {
          "command": "projectLauncher.openProject",
          "when": "view == multiProjectLauncher && viewItem == projectItem",
          "group": "inline@1"
        },
        {
          "command": "projectLauncher.removeProject",
          "when": "view == multiProjectLauncher && viewItem == projectItem",
          "group": "inline@2"
        },
        {
          "command": "projectLauncher.openProject",
          "when": "view == multiProjectLauncher && viewItem == projectItem",
          "group": "1_open@1"
        },
        {
          "command": "projectLauncher.openProjectInCurrentWindow",
          "when": "view == multiProjectLauncher && viewItem == projectItem",
          "group": "1_open@2"
        },
        {
          "command": "projectLauncher.removeProject",
          "when": "view == multiProjectLauncher && viewItem == projectItem",
          "group": "2_modify"
        },
        {
          "command": "projectLauncher.toggleProjectEnabled",
          "when": "view == multiProjectLauncher && (viewItem == projectItem || viewItem == projectItemDisabled)",
          "group": "inline@0"
        },
        {
          "command": "projectLauncher.toggleProjectEnabled",
          "when": "view == multiProjectLauncher && (viewItem == projectItem || viewItem == projectItemDisabled)",
          "group": "1_open@3"
        },
        {
          "command": "projectLauncher.openProject",
          "when": "view == multiProjectLauncher && viewItem == projectItemDisabled",
          "group": "inline@1"
        },
        {
          "command": "projectLauncher.removeProject",
          "when": "view == multiProjectLauncher && viewItem == projectItemDisabled",
          "group": "inline@2"
        },
        {
          "command": "projectLauncher.openProject",
          "when": "view == multiProjectLauncher && viewItem == projectItemDisabled",
          "group": "1_open@1"
        },
        {
          "command": "projectLauncher.openProjectInCurrentWindow",
          "when": "view == multiProjectLauncher && viewItem == projectItemDisabled",
          "group": "1_open@2"
        },
        {
          "command": "projectLauncher.removeProject",
          "when": "view == multiProjectLauncher && viewItem == projectItemDisabled",
          "group": "2_modify"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
